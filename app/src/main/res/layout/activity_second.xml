<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valen.weka.SecondActivity"
    android:background="@drawable/woodland">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        tools:text="Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv2_mat"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="drive"
        android:id="@+id/textView5"
        android:layout_below="@+id/tv2_mat"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        tools:text="Drive"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv2_drive"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="power"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv2_drive"
        android:layout_marginTop="10dp"
        tools:text="Power (in FPS)"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv2_pow"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="price"
        android:id="@+id/textView9"
        android:layout_below="@+id/tv2_pow"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold"
        tools:text="Price (in â‚¬)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv2_upgr"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="rating"
        android:id="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv2_upgr"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        tools:text="Rating"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv2_rate"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView13"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="upgradeability"
        android:id="@+id/textView11"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv2_price"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        tools:text="Upgradeability"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv2_price"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="material"
        android:id="@+id/textView3"
        android:textColorLink="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv2_name"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold"
        tools:text="Material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv2_name"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/star_icon"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/tv2_rate"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="Images"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tv2_rate"
        android:id="@+id/textView4"
        tools:text="Images"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:paddingTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/imageView"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textView4"/>

</RelativeLayout>
</ScrollView>