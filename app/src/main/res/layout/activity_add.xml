<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valen.weka.AddActivity"
    android:background="@drawable/woodland">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name:"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="material"
        android:id="@+id/textView16"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="drive"
        android:id="@+id/textView17"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView16"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="power"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="price"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="upgradeability"
        android:id="@+id/textView20"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView18"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mat_spinner"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignEnd="@+id/editText"

        android:layout_toEndOf="@+id/textView16" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drive_spinner"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignEnd="@+id/mat_spinner"
        android:layout_toEndOf="@+id/textView15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_above="@+id/textView19"
        android:layout_alignEnd="@+id/mat_spinner"
        android:layout_toEndOf="@+id/textView16"
        android:layout_alignStart="@+id/editText"
        android:textColorLink="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_above="@+id/textView20"
        android:layout_alignEnd="@+id/editText4"
        android:layout_toEndOf="@+id/textView19"
        android:backgroundTint="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignEnd="@+id/mat_spinner"
        android:layout_toEndOf="@+id/textView20"
        android:textColorLink="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/floatingActionButton"
        app:backgroundTint="@android:color/holo_orange_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/colorAccent"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView3"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:maxHeight="70dp"
        android:maxWidth="70dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/btn_plus"
        android:layout_below="@+id/editText6"
        android:layout_alignParentEnd="true"
        android:id="@+id/floatingActionButton3"
        app:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="onImageClick" />

</RelativeLayout>
